<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}EHS!{% endblock %}</title>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="stylesheet" href="{{ asset('bundles/easyadmin/stylesheet/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('ehs/css/main.css') }}">
    {% block stylesheets %}{% endblock %}
    {#<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />#}
</head>
<body>
{% include 'header.html.twig' %}

{% if app.session is not null and app.session.started %}
    <diV class="conatiner">
        <div class="row">
            {% for label, messages in app.session.flashbag.all %}
                {% for message in messages %}
                    <div id="flash-messages" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="alert alert-{{ label }} alert-dismissible" role="alert">
                            <span class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </span>
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </diV>
{% endif %}

{% block body %}{% endblock %}
{% include'footer.html.twig' %}

<script src="{{ asset('ehs/js/jquery.min.js') }}"></script>
<script src="{{ asset('bundles/easyadmin/javascript/bootstrap.min.js') }}"></script>
<script src="{{ asset('ehs/js/skel.min.js') }}"></script>
<script src="{{ asset('ehs/js/util.js') }}"></script>
<script src="{{ asset('ehs/js/main.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
